# ===========================================
# FreelanceOS Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Vercel deployment, add these in the Vercel dashboard

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# For Vercel, use a pooled connection (Supabase, Neon, etc.)
DATABASE_URL="postgresql://user:password@host:5432/database"

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Clerk Authentication
# Get these from https://clerk.com dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# ===========================================
# APP URL (Required)
# ===========================================
# Your application URL
# Local: http://localhost:3000
# Production: https://your-app.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# EMAIL (Optional - for invoice delivery)
# ===========================================
# Resend Email Service
# Get these from https://resend.com dashboard
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=invoices@yourdomain.com

# ===========================================
# PAYMENTS (Optional - for Stripe integration)
# ===========================================
# Stripe Payment Processing
# Get these from https://stripe.com dashboard
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhook Secret
# Get this when setting up webhooks in Stripe dashboard
# Webhook URL: https://your-app.vercel.app/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (for subscription tiers)
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_AGENCY=price_...

# ===========================================
# AI (Optional - for AI Insights)
# ===========================================
# Google Generative AI (Gemini)
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIza...

# ===========================================
# EMAIL PROVIDER (Optional)
# ===========================================
# Choose: "resend" or "smtp"
EMAIL_PROVIDER=resend

# SMTP Configuration (if using smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
